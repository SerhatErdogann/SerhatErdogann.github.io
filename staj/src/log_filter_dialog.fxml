        <VBox spacing="10" style="-fx-padding: 15;">
            <Label text="Log Filtreleme Seçenekleri" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <CheckBox fx:id="statusInfoCheckBox" text="Durum Bilgisi" />
            <CheckBox fx:id="statusRequestCheckBox" text="Durum Bilgisi İsteği" />
            <CheckBox fx:id="rfStatusCheckBox" text="RFDurum" />
        </VBox>
    </content>
</DialogPane>
